<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>hook</servlet-name>
        <servlet-class>org.gdg.lille.GithubHookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>stop</servlet-name>
        <servlet-class>org.gdg.lille.StopInstanceCronServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hook</servlet-name>
        <url-pattern>/github</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>stop</servlet-name>
        <url-pattern>/stop</url-pattern>
    </servlet-mapping>
</web-app>
